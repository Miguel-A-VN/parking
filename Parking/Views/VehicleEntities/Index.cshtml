@model IEnumerable<Parking.Models.Entities.VehicleEntity>

@{
    ViewData["Title"] = "Gestión de Vehículos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            🚘 Gestión de Vehículos
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Registrar Nuevo Vehículo
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow border-0 rounded-3">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Usuario</th>
                            <th>Placa</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User?.Email</td>
                                <td class="fw-bold">@item.Plate</td>
                                <td>
                                    @if (item.Type == "Carro")
                                    {
                                        <span class="badge bg-info text-dark">
                                            <i class="bi bi-car-front-fill"></i> Carro
                                        </span>
                                    }
                                    else if (item.Type == "Moto")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-bicycle"></i> Moto
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Otro</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Active)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.VehicleId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.VehicleId" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.VehicleId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-exclamation-circle"></i> No hay vehículos registrados aún.
        </div>
    }
</div>
